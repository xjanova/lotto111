{
    "name": "app/lotto-platform",
    "type": "project",
    "description": "Modern Lottery Platform built with Laravel 12",
    "keywords": ["laravel", "lottery", "lotto"],
    "license": "proprietary",
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "thaiprompt/smschecker-laravel",
                "version": "1.0.0",
                "source": {
                    "url": "https://github.com/xjanova/smschecker.git",
                    "type": "git",
                    "reference": "main"
                },
                "autoload": {
                    "psr-4": {
                        "Thaiprompt\\SmsChecker\\": "laravel-plugin/src/"
                    }
                },
                "extra": {
                    "laravel": {
                        "providers": [
                            "Thaiprompt\\SmsChecker\\SmsCheckerServiceProvider"
                        ]
                    }
                },
                "require": {
                    "php": "^8.1",
                    "illuminate/support": "^10.0|^11.0|^12.0"
                }
            }
        }
    ],
    "require": {
        "php": "^8.3",
        "laravel/framework": "^12.0",
        "laravel/sanctum": "^4.0",
        "laravel/reverb": "^1.0",
        "laravel/tinker": "^2.10",
        "livewire/livewire": "^3.6",
        "livewire/volt": "^1.7",
        "thaiprompt/smschecker-laravel": "1.0.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.24",
        "larastan/larastan": "^3.0",
        "laravel/pail": "^1.2",
        "laravel/pint": "^1.18",
        "laravel/sail": "^1.38",
        "laravel/telescope": "^5.0",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpunit/phpunit": "^11.5",
        "rector/rector": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "quality": [
            "@php vendor/bin/pint --test",
            "@php vendor/bin/phpstan analyse --memory-limit=512M"
        ],
        "lint": "@php vendor/bin/pint",
        "analyse": "@php vendor/bin/phpstan analyse --memory-limit=512M",
        "test": "@php artisan test",
        "test:coverage": "@php artisan test --coverage --min=70"
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
